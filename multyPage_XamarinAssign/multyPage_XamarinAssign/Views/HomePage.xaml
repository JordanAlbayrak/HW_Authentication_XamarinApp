<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="multyPage_XamarinAssign.Views.HomePage">

    <StackLayout>
        <Image x:Name="ImgPet" Source="petlogo.png" />

        <Label Text="Welcome to Home page!"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="Large" />
        <Label Text="{Binding Username}"
               FontSize="Large" />
        <Button x:Name="BtnOwner"
                Text="Owner"
                FontSize="Small"
                BackgroundColor="LightBlue"
                Clicked="BtnOwner_OnClicked" />
        <Button x:Name="BtnVetPage"
                Text="Vet List"
                FontSize="Small"
                BackgroundColor="LightBlue"
                Clicked="BtnVetPage_OnClicked" />
        <Button x:Name="BtnPetList"
                Text="Pet List"
                FontSize="Small"
                BackgroundColor="LightBlue"
                Clicked="BtnPetList_Clicked" />
        <Button x:Name="AdminPanel"
                Text="Admin Panel"
                FontSize="Small"
                BackgroundColor="LightBlue"
                Clicked="UserList_Clicked" />
        <Button Text="Logout" FontSize="Small" BackgroundColor="LightBlue" Clicked="BtnLogout_Clicked" />
    </StackLayout>
</ContentPage>