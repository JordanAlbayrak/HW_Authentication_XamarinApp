<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="multyPage_XamarinAssign.Views.Authentication.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="20"
            VerticalOptions="Center">
            <Grid RowDefinitions="*">
                <Label Text="Welcome to Login Page!" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="0"/>
                <Entry x:Name="TxtUserName" Placeholder="Username" FontSize="Large" Grid.Row="2"/>
                <Entry x:Name="TxtPassword" Placeholder="Password" FontSize="Large" IsPassword="True" Grid.Row="3"/>
                <Button Text="Login" FontSize="Small" BackgroundColor="LightBlue" Clicked="BtnLogin_Clicked" Grid.Row="5"/>
                <Button Text="Register" FontSize="Small" BackgroundColor="LightBlue" Clicked="BtnReg_Clicked" Grid.Row="6"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>