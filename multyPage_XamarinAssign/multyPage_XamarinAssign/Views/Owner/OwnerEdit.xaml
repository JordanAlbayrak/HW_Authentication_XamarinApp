<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="multyPage_XamarinAssign.Views.Owner.OwnerEdit">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Pet Registration Page!"
                   FontSize="Large"
                   HorizontalTextAlignment="Center" 
            />
            <Entry x:Name="TxtOwnerFirstName"
                   Placeholder="Pet Name"
                   FontSize="Large"
            />
            <Entry x:Name="TxtOwnerLastName"
                   Placeholder="Last Name"
                   FontSize="Large"
            />
            
            <Entry x:Name="TxtOwnerPhone"
                   Placeholder="Last Name"
                   FontSize="Large"
                   Keyboard="Numeric"
            />

            <Button x:Name="BtnRegister"
                    Text="Register"
                    BackgroundColor="LightBlue"
                    BorderWidth="0"
                    Clicked="btnOwnerRegistration_Clicked"
                    FontSize="Small"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>